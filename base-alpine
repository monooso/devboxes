# syntax=docker/dockerfile:1
FROM alpine:edge

# Install dependencies
RUN apk update && apk add \
    bash \
    curl \
    g++ \
    gcc \
    git \
    fd \
    inotify-tools \
    lazygit \
    make \
    musl-dev \
    neovim \
    nodejs \
    npm \
    openssh \
    ripgrep \
    stow \
    tree \
    wget \
    zsh

# Copy SSH keys; I know, shut up, this is an experiment
WORKDIR /root
RUN mkdir -p .ssh
COPY --from=ssh id_ed25519 .ssh/id_ed25519
COPY --from=ssh id_ed25519.pub .ssh/id_ed25519.pub

# Install dotfiles
WORKDIR /root
RUN mkdir -p dotfiles \
    && cd dotfiles \
    && git clone https://github.com/monooso/devbox-dotfiles.git \
    && stow devbox-dotfiles

# Create a directory for all the lovely code we're going to write
WORKDIR /root
RUN mkdir app

CMD ["/bin/zsh"]
